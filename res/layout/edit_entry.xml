<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nameLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Name:" />

            <EditText
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date:" />

            <EditText
                android:id="@+id/date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/areaLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Area(s) Focused On:" />

            <EditText
                android:id="@+id/area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sessionLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Session Length:" />

            <EditText
                android:id="@+id/session"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/typeLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Type of Massage:" />

            <EditText
                android:id="@+id/type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/styleLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Style of Massage:" />

            <EditText
                android:id="@+id/style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/notesLbl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Notes:" />

            <EditText
                android:id="@+id/notes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>